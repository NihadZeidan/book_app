<!DOCTYPE html>
<html lang="en">

<%- include( '../../layout/head')%>

    <body>

        <header>
            <%- include('../../layout/header') %>
        </header>

        <main>
            <% oneBook.forEach(book => {%>

                <div>
                    <img src="<%= book.image_url %>" />
                    <h2>
                        <%= book.title %>
                    </h2>
                    <h3>
                        <%= book.author %>
                    </h3>
                    <p>
                        <%= book.description1 %>
                    </p>
                    <p>
                        <%= book.isbn %>
                    </p>
                </div>
                <button id='update_details_button'>
            Update Details
        </button>

                <form action="/books/<%= book.id %>?_method=delete" method="post">
                    <input id="delete_button" type="submit" value="Delete Book">
                    </input>
                </form>

                <%- include('edit')%>

                    <% }) %>



                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

                        <script>
                            $('#update_details_button').on('click', function(event) {
                                $('#formUpdate').css('display', 'block');
                            });
                        </script>



        </main>


    </body>

</html>

</html>