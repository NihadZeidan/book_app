<!DOCTYPE html>
<html lang="en">
<%- include( '../layout/head')%>

    <body>
        <header>
            <%- include('../layout/header') %>
        </header>

        <main>

            <% SeedData.forEach(book => {%>

                <div>
                    <img src="<%= book.image_url %>" />

                    <h2>
                        <%= book.title %>
                    </h2>

                    <h3>
                        <%= book.author %>
                    </h3>

                    <p>
                        <%= book.description1 %>
                    </p>

                    <p>
                        <%= book.isbn %>
                    </p>

                    <a href="/books/<%= book.id %>"> View Details </a>
                </div>

                <% }) %>


        </main>

        <footer>

        </footer>

    </body>

</html>